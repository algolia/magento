      .magento-1
        %h1
          %img.jumbotron-algolia_logo{:src => "{{site.baseurl}}/img/logo-algolia-bw-dark-nobg.svg", :alt => "Algolia", :title => "Algolia"}/
          for
          %img.jumbotron-magento_logo{:src => "https://res.cloudinary.com/hilnmyskv/image/upload/v1470238602/magento-white-logo-white_ngqfvg.svg", :alt => "Magento", :title => "Magento"}/
